    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.0/sweetalert.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.20/datatables.min.css" />

    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.20/datatables.min.js"></script>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>     

    <script type="text/javascript">
        $(document).ready(function () {

            $('#example').DataTable({

            });
        });
    </script>

    <title>Öğrenci kayıtları</title>

</head>

<body>

    <div class="container">
        <br />
        <div style="width:90%; margin:0 auto;">
            <table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead>
                    <tr>

                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Email</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model)
                    {
                        <tr>
                            <td>@d.Adi</td>
                            <td>@d.Soyadi</td>
                            <td>@d.Email</td>
                            <td width="230">
                                <div align="center">
                                    @Html.ActionLink("SİL", "Delet", "Home", new { delete = d.Numara }, new { @class = "btn btn-danger" })
                                    <button type="button" class="btn btn-warning" data-toggle="modal" data-id=@d.Numara data-target="#myModal">GÜNCELLE</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script type="text/javascript">
        $(function () {
            $('#myModal').on('show.bs.modal', function (event) {
                let Id = $(event.relatedTarget).data('id')
                $(this).find('.item-1').val(Id)
            })
        });
    </script>

    <h3>Öğrenci Listesi</h3>

    <table class="table table-striped table-bordered">

        <thead>
            <tr>

                <th>İsim</th>
                <th>Soyisim</th>
                <th>Email</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var d in Model)
            {
                <tr>
                    <td>@d.Adi</td>
                    <td>@d.Soyadi</td>
                    <td>@d.Email</td>
                    <td width="230">
                        <div align="center">
                            @Html.ActionLink("SİL", "Delet", "Home", new { delete = d.Numara }, new { @class = "btn btn-danger" })
                            <button type="button" class="btn btn-warning" data-toggle="modal" data-id=@d.Numara data-target="#myModal">GÜNCELLE</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <div id="insertdiv" class="container">
        @using (Html.BeginForm("Insert", "Home"))
        {
            <input type="text" name="isim" placeholder="İSİM" />
            <input type="text" name="soyisim" placeholder="SOYİSİM" />
            <input type="text" name="email" placeholder="E-POSTA" />
            <button id="ekle" type="submit" class="btn btn-primary">EKLE</button>
        }
    </div>

    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>

                </div>
                <div class="modal-body">
                    <div align="center">
                        @using (Html.BeginForm("Update", "Home"))
                        {
                            <input type="hidden" class="item-1" name="update" />
                            <input type="text" name="isim" value=" " />
                            <input type="text" name="soyisim" value=" " />
                            <input type="text" name="email" value=" " />
                            <button type="submit" class="btn btn-warning">GÜNCELLE</button>

                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">ÇIKIŞ</button>
                </div>
            </div>
        </div>
    </div>

    <script>
    function Dogrula(){


        if($('#ogrenciNo').val() && $('#ogrenciNo').val()){
            Validate();
        }
        else{
        alert("HATA");
        }

        }



    function Validate() {

        $.ajax(
            {


                type: "POST",
                url: '@Url.Action("Validate", "Login")',

                data: {
                ogrenciNo : $('#ogrenciNo').val(),
                sifre : $('#sifre').val()
                },

                error: function (result) {
                    alert("There is a Problem, Try Again!");
                },

                success: function (result) {
                    console.log(result);
                    if (result.status == true) {
                        window.location.href = '@Url.Action("Anasayfa", "Ogrenci")';
                    }
                    else {
                       window.location.href = '@Url.Action("Login", "Login")';
                       alert(result.message);

                    }
                }
            });
        }

    </script>














</body>


</html>
<script>
    $('#ekle').click(function () {
        swal("Eklendi!", "Your record has been saved.", "success");
    });
</script>
